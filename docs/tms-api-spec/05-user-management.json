        "method": "GET",
        "description": "List all users in an organization",
        "headers": {
          "Authorization": "Bearer {token}"
        },
        "query": {
          "role": "facilitator|respondent|all",
          "status": "active|inactive|all",
          "department": "string",
          "page": 1,
          "limit": 50
        },
        "response": {
          "success": true,
          "data": {
            "users": [
