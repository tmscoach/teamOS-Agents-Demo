{
  "userManagement": {
    "description": "User and organization management endpoints",
    "endpoints": {
      "/api/v2/users": {
        "method": "POST",
        "description": "Create a new user (facilitator or respondent)",
        "headers": {
          "Authorization": "Bearer {token} OR x-api-key: {apiKey}"
        },
        "request": {
          "body": {
            "email": "newuser@company.com",
            "firstName": "Jane",
            "lastName": "Smith",
            "role": "respondent",
            "organizationId": "org_def456",
            "clerkUserId": "clerk_user_abc789",
            "metadata": {
              "department": "Sales",
              "manager": "usr_xyz123",
              "location": "New York"
            }
          }
        },
        "response": {
          "success": true,
          "data": {
            "userId": "usr_new123",
            "email": "newuser@company.com",
            "role": "respondent",
            "organizationId": "org_def456",
            "status": "active",
            "createdAt": "2024-01-06T11:00:00Z"
          }
        }
      },
      
      "/api/v2/users/{userId}": {
        "method": "GET",
        "description": "Get user details",
        "headers": {
          "Authorization": "Bearer {token}"
        },
        "response": {
          "success": true,
          "data": {
            "userId": "usr_abc123",
